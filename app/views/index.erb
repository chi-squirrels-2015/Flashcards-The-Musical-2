<div class="container">
  <div id="login_register">
    <a href="/users/new">Register</a>
    <a href="/users/login">Login</a>
  </div>
  <div id="logo">
    <p>Flashcards The Musical 2: The SQL - Electric Bugaloo</p>
  </div>
  <br>
  <!--Here we will have all of the deck links displayed-->
  <a id="create_deck" href="/decks/new">Create Your Own!</a><br>
  <br>
  <% @decks.each do |deck| %>
    <a href="/decks/<%= deck.id %>/cards/1"><%= deck.deck_name %></a>
    <p><%= deck.description %></p>
    <br>
  <% end %>
</div>


